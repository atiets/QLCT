<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_read_thu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CHI TIẾT KHOẢN THU"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#F44336"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Ngày: "
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNgayThu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15/5/2024"
            android:textSize="25sp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Khoản thu: "
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtKhoanThu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salary tháng 4"
            android:textSize="25sp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Tiền thu : "
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTienThu"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="7000000"
            android:textSize="25sp" />

        <TextView
            android:layout_width="47dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="đ"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Loại thu: "
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLoaiThu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salary"
                android:textSize="25sp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnHuyXemKhoanThu"
            android:layout_width="103dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="Hủy"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>
